<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed == true %>
    <%= "(x)" %>
    <% else %>
    <%= "()" %>
    <% end %>
    <%= link_to "#{task.title}", task_path(task.id) %> - <%= task.details %> (ID: <%= task.id %>)</li>
  <% end %>
</ul>

<%= link_to "Add new task", tasks_new_path %>
